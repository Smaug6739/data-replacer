{
	"version": "2.4.2",
	"compilerOptions": {
		"lib": [
			"ES2020"
		],
		"target": "ES2020",
		"module": "CommonJS",
		"noEmitOnError": true,
		"strict": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"outDir": "./dist",
		"rootDir": "src",
		"removeComments": false,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
	},
	"exclude": [
		"node_modules",
	]
}